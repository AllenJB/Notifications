{
  "name": "allenjb/notifications",
  "type": "library",
  "description": "Library for handling error reports and developer notifications (via email or Sentry)",
  "keywords": [
    "AllenJB",
    "Notifications",
    "Sentry",
    "email",
    "error",
    "reporting"
  ],
  "homepage": "https://github.com/AllenJB/Notifications",
  "license": "MIT",
  "authors": [
    {
      "name": "AllenJB",
      "homepage": "https://github.com/AllenJB",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.4|^8.0",
    "ext-json": "*",
    "allenjb/mailer": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "AllenJB\\Notifications\\": "src"
    }
  },
  "require-dev": {
    "phpstan/phpstan": "^1.9",
    "phpstan/phpstan-strict-rules": "^1.4",
    "phpcompatibility/php-compatibility": "^9.3",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
    "php-parallel-lint/php-parallel-lint": "^1.3"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
